  private IntPtr KeyboardProc(int nCode, IntPtr wParam, IntPtr lParam)
  {
      if (nCode >= 0 && wParam == (IntPtr)WM_KEYDOWN)
      {
          var kb = (KBDLLHOOKSTRUCT)Marshal.PtrToStructure(lParam, typeof(KBDLLHOOKSTRUCT));
          if (kb.vkCode == ToggleKey)
